\ifnumcomp{\value{xp}}{<}{120}{\ifnumcomp{\value{xp}}{>}{100}{$1/2$ XP}{$1/3$}}{%
	\divide\value{xp} by 120%
	\addtocounter{xp}{\value{xpbonus}}%
\arabic{xp} XP}%
