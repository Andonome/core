	\multiply\value{defenceXPtotal} by \value{hp}

\iftoggle{debug}{Defence total: \arabic{defenceXPtotal}}{}

% XP = attackXPtotal + defenceXPtotal
	\setcounter{xp}{\value{attackXPtotal}}
	\addtocounter{xp}{\value{defenceXPtotal}}
